@model Movies.Models.MovieViewModel
@{
    Layout = null;
}

@using (Ajax.BeginForm("UpdateMovie", new { id = Model.Id }, new AjaxOptions
{
    UpdateTargetId = "movies",
    InsertionMode = InsertionMode.Replace
}))
{
    <tr>
        <td>
            @Html.TextBoxFor(m => m.Title)
        </td>
        <td>
            @Html.TextBoxFor(m => m.Director)
        </td>
        <td>
            @Html.TextBoxFor(m => m.Year)
        </td>
        <td>
            <input type="submit" value="Save" class="btn btn-primary" />
            @Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-warning" })
        </td>
    </tr>
}
