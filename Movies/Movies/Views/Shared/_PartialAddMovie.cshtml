@model Movies.Models.MovieAddViewModel
@{
    ViewBag.Title = "_PartialAddMovie";
    Layout = null;
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <div class="row">
        <div class="row">
            @Html.LabelFor(m => m.Title)
            <div class="input-field">
                @Html.EditorFor(m => m.Title)
                @Html.ValidationMessageFor(model => model.Title)
            </div>
        </div>
        <div class="row">
            @Html.LabelFor(m => m.Director)
            <div class="input-field">
                @Html.EditorFor(m => m.Director)
                @Html.ValidationMessageFor(model => model.Director)
            </div>
        </div>
        <div class="row">
            @Html.LabelFor(m => m.Year)
            <div class="input-field">
                @Html.EditorFor(m => m.Year)
                @Html.ValidationMessageFor(model => model.Year)
            </div>
        </div>
        <br />
        <div class="row">
            @Html.LabelFor(m => m.FemaleActors)
            @Html.DropDownListFor(m => m.SelectedFemaleLeadId, Model.FemaleActors.Select(f => new SelectListItem { Value = f.Id.ToString(), Text = f.FirstName + " " + f.LastName }))
            @Html.ValidationMessageFor(m => m.SelectedFemaleLeadId)
        </div>
        <br/>
        <div class="row">
            @Html.LabelFor(m => m.MaleActors)
            @Html.DropDownListFor(m => m.SelectedMaleLeadId, Model.MaleActors.Select(m => new SelectListItem { Value = m.Id.ToString(), Text = m.FirstName + " " + m.LastName }))
            @Html.ValidationMessageFor(m => m.SelectedMaleLeadId)
        </div>
        <br />
        <div class="row">
            @Html.LabelFor(m => m.Studios)
            @Html.DropDownListFor(m => m.SelectedStudioId, Model.Studios.Select(m => new SelectListItem { Value = m.Id.ToString(), Text = m.Name }))
            @Html.ValidationMessageFor(m => m.SelectedStudioId)
        </div>
        <br />
        <div class="center">
            <input type="submit" value="Add Movie" class="btn" />
        </div>
    </div>
}